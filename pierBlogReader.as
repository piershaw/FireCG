package {	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.net.*;	import flash.xml.*;	import fl.controls.*;	import flash.utils.Timer;	public class pierBlogReader extends MovieClip {		private var Loader2:URLLoader;		private var Loader2REQ:URLRequest;		private var textAreaArray:Array = new Array();		private var Numb:int;		private var myTimer:Timer = new Timer(2000, 1);		public function pierBlogReader() {						Loader2REQ = new URLRequest("data2.txt");			Loader2 = new URLLoader();// loads server text file   			Loader2.dataFormat = URLLoaderDataFormat.TEXT;// reads text file			Loader2.addEventListener(Event.COMPLETE, Loaded2);			Loader2.load(Loader2REQ);					}				public function Loaded2(event:Event) {			myTimer.start();			//trace( "this is trace " + window.text);			myTimer.addEventListener(TimerEvent.TIMER, wait);			return;		}				public function wait(e:Event){			trace( "wait " + myTimer.currentCount);						if(myTimer.currentCount== 1){							lookfor();							}			return;		}						public function lookfor(){ 		trace( "this is trace " + window.text);		addEventListener(Event.ENTER_FRAME, gogo);		function gogo(e:Event){		Loader2.load(Loader2REQ);		window.text = Loader2.data;		myTimer.reset();		}		return;		}									}}