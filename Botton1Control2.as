package {	import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.net.*;	import flash.xml.*;	public class Botton1Control2 extends MovieClip {		private var player1:Player1 = new Player1();		private var player2:Player2 = new Player2();		private var Loader2:URLLoader; 		private var Loader2REQ:URLRequest;		private var isUp:Boolean;				public function Botton1Control2() {			Loader2REQ = new URLRequest("data.txt");			Loader2 = new URLLoader(); 			Loader2.dataFormat = URLLoaderDataFormat.VARIABLES;  			Loader2.load(Loader2REQ); 			Loader2.addEventListener(Event.COMPLETE, Loaded2);						player1.x = 200;			player1.y = 200;			addChild(player1);						player2.x = 100;			player2.y = 100;			addChild(player2);											}				public function Loaded2(event:Event) {						addEventListener(Event.ENTER_FRAME, lookfor);					}				public function moveMouse1(e:MouseEvent){			player1.startDrag();			isUp = true;		}				public function moveMouse2(e:MouseEvent){			player2.startDrag();			isUp = true;		}		public function moveMouseOff1(e:MouseEvent){			player1.stopDrag();				isUp = false;		}				public function moveMouseOff2(e:MouseEvent){			player2.stopDrag();					isUp = false;		}						public function lookfor(e:Event){ 			player1.addEventListener(MouseEvent.MOUSE_DOWN, moveMouse1);			player2.addEventListener(MouseEvent.MOUSE_DOWN, moveMouse2);			player1.addEventListener(MouseEvent.MOUSE_UP, moveMouseOff1);			player2.addEventListener(MouseEvent.MOUSE_UP, moveMouseOff2);			Loader2.load(Loader2REQ);			if(isUp == true){			movePlayerX = player2.x; 			movePlayerX = player1.x; 			}			if(isUp == false){			player2.x = Loader2.data.var_1;			player1.x = Loader2.data.var_1;			}					}					}}